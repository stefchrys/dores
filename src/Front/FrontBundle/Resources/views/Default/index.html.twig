{% extends '::base.html.twig' %}

{% block contenu %}
<!--Contenu principal @media>1200px-->
            
            <div class="row visible-lg">
                {% for i in 0..1 %}
                <div class="col-sm-4 col-md-4 "> 
                    <div class="thumbnail"> 
                        <div class="caption" id="gris">
                            {% if premiere[i] is defined %}
                            <h3 id="auteur1" >{{premiere[i].auteur | raw}}</h3>
                            <h3 id="titre1">{{premiere[i].titre | raw}}</h3>
                            <p id="type1">{{premiere[i].collection | raw}}</p>
                            <a href="{{ path('front_livre', { 'id': premiere[i].id }) }}" >
                                <div class="pull-left pad-right"><img width="100" height="154" src="{{ asset('img/collection/'~ premiere[i].image) }}" alt="Livre" class="img-thumbnail"></div>
                            </a>
                            <p> {{premiere[i].preface | raw}} </p> 
                            {% endif %}                            
                        </div> 
                    </div> 
                </div>
                {% endfor %}

                <div class="col-sm-4 col-md-4 "> 
                    {% for i in 0..1 %}
                        <div class="panel panel-default"> 
                            <div class="bandelette" >
                                <div class="panel-body gris"> 
                                    {% if contenus[i] is defined %}
                                    <p><h4>{{contenus[i].titre | raw}}</h4> <br>
                                     {{contenus[i].synopsis | raw}}
                                     </p> 
                                     {% endif %}
                                </div>
                            </div>
                        </div><br>
                    {% endfor %}  
                </div>
                
                <hr>
            </div> 
