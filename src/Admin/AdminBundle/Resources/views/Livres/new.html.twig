{% extends '::admin.html.twig' %}

{% block contenu%}
    <h1>
        <strong>BIBLIOTHEQUE</strong>
    </h1>
    <div class="panel panel-success"> 
        <div class="panel-heading"> 
          <h3 class="panel-title">Ajout élément</h3> 
        </div>
    </div>


    {{form_start(form,{ 'attr': {'role': 'form'} })}} 

    <div class="form-group has-success">
    <label for="pw">Premiere page</label>
    {{ form_widget(form.premiere,{ 'attr': {'class': 'form-control'} } ) }} 
    </div>

    <div class="form-group has-success">
    <label for="pw">Auteur</label>
    {{ form_widget(form.auteur,{ 'attr': {'class': 'form-control'} } ) }} 
    </div>

    <div class="form-group has-success">
    <label for="pw">Titre</label>
    {{ form_widget(form.titre,{ 'attr': {'class': 'form-control'} } ) }} 
    </div>

    <div class="form-group has-success">
    <label for="pw">Sous-Titre</label>
    {{ form_widget(form.sousTitre,{ 'attr': {'class': 'form-control'} } ) }} 
    </div>

    <div class="form-group has-success">
    <label for="pw">Collection</label>
    {{ form_widget(form.collection,{ 'attr': {'class': 'form-control'} } ) }} 
    </div>

    <div class="form-group has-success">
    <label for="pw">Categorie</label>
    {{ form_widget(form.categorie,{ 'attr': {'class': 'form-control'} } ) }} 
    </div>

    <div class="form-group has-success">
    <label for="pw">Prix</label>
    {{ form_widget(form.prix,{ 'attr': {'class': 'form-control'} } ) }} 
    </div>

    <div class="form-group has-success">
    <label for="pw">Image</label>
    {{ form_widget(form.image,{ 'attr': {'class': 'form-control'} } ) }} 
    </div>

    <div class="form-group has-success">
    <label for="pw">Preface</label>
    {{ form_widget(form.preface,{ 'attr': {'class': 'form-control'} } ) }} 
    </div>

    <div class="form-group has-success">
    <label for="pw">Synopsis</label>
    {{ form_widget(form.synopsis,{ 'attr': {'class': 'form-control'} } ) }} 
    </div>

    <div class="form-group has-success">
    <label for="pw">Footer</label>
    {{ form_widget(form.footer,{ 'attr': {'class': 'form-control'} } ) }} 
    </div>

    <div class="form-group has-success">
    <label for="pw">Paypal</label>
    {{ form_widget(form.paypal,{ 'attr': {'class': 'form-control'} } ) }} 
    </div>

    <table>
        <tr>                               
            <td>{{form_end(form)}}</td>
            <td><a href="{{ path('admin_homepage') }}" role="button" class="btn btn-primary">ACCUEIL ADMIN</a> </td>
            <td><a href="{{ path('livres') }}" role="button" class= "btn btn-success"> ACCUEIL BIBLIOTHEQUE</a></td>
        </tr>
    </table>



{% endblock %}
