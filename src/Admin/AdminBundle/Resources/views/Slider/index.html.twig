{% extends '::admin.html.twig' %}

{% block contenu%}
    <h1><strong>SLIDER</strong></h1>
<div class="panel panel-success"> 
    <div class="panel-heading"> 
      <h3 class="panel-title">Liste des éléments</h3> 
   </div> 
   
   <table class="table table-striped"> 
      <thead>
            <tr>
                
                <th>Fichier Source</th>
                
                
                <th>Actions</th>
            </tr>
        </thead> 
      <tbody>
        {% for entity in entities %}
            <tr>
                
                <td>{{ entity.source }}</td>
                
                <td>
                <ul>

                    
                    <li>
                        <a href="{{ path('slider_edit', { 'id': entity.id }) }}"><span class="label label-info">edit</span></a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
   </table> 
   <table>
        <tr>
            <td><a href="{{ path('admin_homepage') }}" role="button" class="btn btn-primary">ACCUEIL ADMIN</a></td>
            <td><a href="{{ path('slider_new') }}" role="button" class="btn btn-success">AJOUTER</a></td>
            
        </tr>
    </table>
</div>  
    {% endblock %}

   
