        {% endblock %}

        {% block lettre %}
        <div class="row">
            <div class="col-sm-12 col-md-12 "> 
                <div class="thumbnail">
                    <div class="caption" id="gris">
                        <h3 id="titre1">S'abonner à la lettre d'information</h3>
                        {{ form_start(newsletter,{'attr': {'class': 'form-inline','role': 'form'}}) }} 
                            <div class="form-group">  
                                 {{ form_widget(newsletter.news,{'attr': {'placeholder': 'Votre Email','class':'form-control'}}) }}
                            </div> 
                            {{ form_widget(newsletter.Envoyer,{'attr': {'class': 'btn btn-default'}}) }}
                        {{ form_end(newsletter) }}      
                        
                    </div>
                </div>
            </div>                   
        </div>
        
        {% endblock %}

