                        </ul>
                    </div>
                </nav>
            </div>
            
        {% endblock %}
        
        {% block slider %}
            <div class="row hidden-xs">     
                <div id="moncarrousel" class="carousel slide" data-interval="15000" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#moncarrousel" data-slide-to="0" class="active"></li>
                        <li data-target="#moncarrousel" data-slide-to="1"></li>
                        <li data-target="#moncarrousel" data-slide-to="2"></li>
                        <li data-target="#moncarrousel" data-slide-to="3"></li>
                    </ol>
                    <div class="carousel-inner">
                        {% set classe = 'item active' %}
                        {% for slider in sliders%} 
                        <div class="{{classe}}">
                            <div class="carousel-page">
                                <img src={{asset('img/slider/' ~ slider.source )}} alt="Bandeau" class="img-responsive" >
                            </div>                      
                        </div>    
                        {% set classe = 'item' %}  
                        {% endfor %}              
                    </div>
                   
                    <a class="left carousel-control" href="#moncarrousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a class="right carousel-control" href="#moncarrousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div>
                <hr/>       
            </div>
        {% endblock %}

